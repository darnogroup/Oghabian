@model UserAddressViewModel
@{
    ViewData["Title"] = "ثبت سفارش";
    Layout = "~/Areas/User/Views/Shared/_UserLayout.cshtml";
}


<section class="inner-section checkout-part mt-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-7">
                <div class="account-card">
                    <div class="account-title"><h4>اطلاعات  شما</h4></div>
                    <div class="account-content">
                        <div class="contact-form" id="contact-form">


                            <div class="row">
                                <h5>روش پرداخت:</h5>
                                <div class="form-check col-6 mt-2">
                                    <input class="form-check-input" onclick="home()" type="radio" name="exampleRadios" value="option1" checked>
                                    <label class="form-check-label" for="exampleRadios1">
                                        پرداخت درب منزل
                                    </label>
                                </div>
                                <div class="form-check col-6 mt-2">
                                    <input class="form-check-input" onclick="pay()" type="radio" name="exampleRadios" value="option1" checked>
                                    <label class="form-check-label" for="exampleRadios1">
                                        پرداخت از طریق درگاه بانکی
                                    </label>
                                </div>
                            </div>
                            <div class="form-group mt-2">
                                <h5>اطلاعات ارسال:</h5><br />
                                <label>شهر:</label>
                                <div class="form-input-group"><input class="form-control" type="text" disabled="disabled" value="@Model.City"></div>
                            </div>
                            <div class="form-group">
                                <label>استان:</label>
                                <div class="form-input-group"><input class="form-control" type="text" disabled="disabled" value="@Model.State"></div>
                            </div>
                            <div class="form-group">
                                <label>شماره تماس:</label>
                                <div class="form-input-group"><input class="form-control" type="text" disabled="disabled" value="@Model.PhoneNumber"></div>
                            </div>
                            <div class="form-group">
                                <label>پست الکترونیک:</label>
                                <div class="form-input-group"><input class="form-control" type="text" disabled="disabled" value="@Model.Mail"></div>
                            </div>
                            <div class="form-group">
                                <label>کد پستی:</label>
                                <div class="form-input-group"><input class="form-control" disabled="disabled" type="text" value="@Model.AddressCode"></div>
                            </div>


                            <div class="form-group">
                                <label>نشانی:</label>
                                <div class="form-input-group"><textarea class="form-control" disabled="disabled" style="height: 144px;">@Model.AddressText</textarea></div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-5">
                <div class="account-card">
                    <div class="checkout-charge">
                        <div class="account-title"><h4>جزئیات سفارش</h4></div>
                        <div class="row form-group">
                            <h6>کد تخفیف:</h6><br />
                            <input type="text" class="col-8" style="border: 1px solid gray; border-radius: 5px;" id="discount" />
                            <a class="btn btn-sm btn-warning col-3 offset-1" onclick="RunDiscount()">اعمال</a>
                        </div>
                        <ul>

                            <li><span>هزینه ارسال </span><span>@Model.Send</span></li>


                            <li>
                                <span>هزینه نهایی</span><span id="totalFull"> @Model.Total</span><span>تومان</span>
                            </li>


                        </ul>
                    </div>
                    <div class="checkout-proced">
                        <a id="pay" class="btn btn-inline">پرداخت آنلاین</a>
                        <a id="home" style="display: none" asp-controller="Profile" asp-action="FinishOrder" class="btn btn-inline">ثبت درخواست</a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>

@section Footer
{
    <script>
        function home() {
            document.getElementById("home").style.display = 'block';

            document.getElementById("pay").style.display = 'none';

        }

        function pay() {
            document.getElementById("pay").style.display = 'block';

            document.getElementById("home").style.display = 'none';
        }

        function RunDiscount() {

            var discount = document.getElementById("discount").value;


            if (discount == null || discount === "") {

                Swal.fire({
                    title: 'کد تخفیف را وارد کنید',
                    icon: 'error',

                    confirmButtonColor: '#3085d6',

                    confirmButtonText: 'تائید',

                });
            } else {
                Swal.fire({
                    title: 'آیا تخفیف اعمال شود؟',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'بله پاک شود',
                    cancelButtonText: 'انصراف'
                }).then((result) => {
                    if (result.isConfirmed) {
                        var resultRun = $.get("/RunDiscount/" + discount);

                        if (resultRun === true) {

                            Swal.fire({
                                title: 'کد تخفیف اعمال شد',
                                icon: 'success',

                                confirmButtonColor: '#3085d6',

                                confirmButtonText: 'تائید',

                            });
                            var delayInMilliseconds = 1000; //1 second

                            setTimeout(function () {
                                location.reload();
                            },
                                delayInMilliseconds);

                        } else {
                            Swal.fire({
                                title: 'کد وارد شده معتبر نیست',
                                icon: 'error',

                                confirmButtonColor: '#3085d6',

                                confirmButtonText: 'تائید',

                            });
                        }

                    } else {


                        Swal.fire({
                            title: 'کد وارد شده معتبر نیست',
                            icon: 'error',

                            confirmButtonColor: '#3085d6',

                            confirmButtonText: 'تائید',

                        });
                    }

                });
            }
        }




    </script>
}
