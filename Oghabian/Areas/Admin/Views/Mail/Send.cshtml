@model SendMailViewModel
@{
    ViewData["Title"] = "ارسال پیام";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<nav class="page-breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/Admin">پیشخوان</a></li>
        <li class="breadcrumb-item"><a asp-controller="Mail" asp-action="Index">لیست ایمیل ها</a></li>
        <li class="breadcrumb-item " aria-current="page">ارسال پیام</li>
    </ol>
</nav>
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h6 class="card-title">ارسال پیام</h6>
                @if (ViewBag.Alert != null)
                {
                    <div class="alert alert-fill-danger" role="alert">
                        @ViewBag.Alert
                    </div>
                }
                <form asp-controller="Mail" asp-action="Send">
                    <div class="form-group">
                        <label for="exampleInputUsername1">عنوان پیام</label>
                        <input type="text" asp-for="Title" class="form-control" id="exampleInputUsername1" autocomplete="off" placeholder="عنوان پیام">
                        <span class="text-danger" asp-validation-for="Title"></span>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputUsername1">متن پیام</label>
                        <textarea id="maxlength-textarea" asp-for="Text" class="form-control" maxlength="900" rows="8" placeholder="متن پیام"></textarea>
                        <span class="text-danger" asp-validation-for="Title"></span>
                    </div>
                    <button type="submit" class="btn btn-primary ml-2">ثبت</button>
                    <a role="button" href="/Admin/Mails" class="btn btn-light">لغو</a>
                </form>
            </div>
        </div>
    </div>
</div>
@section Footer{
    <partial name="_ValidationScriptsPartial" />
}