@model InsertDiscountViewModel
@{
    ViewData["Title"] = "افزودن تخفیف";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<nav class="page-breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/Admin">پیشخوان</a></li>
        <li class="breadcrumb-item"><a asp-controller="Discount" asp-action="Index">لیست تخفیف ها</a></li>
        <li class="breadcrumb-item " aria-current="page">افزودن تخفیف</li>
    </ol>
</nav>
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h6 class="card-title">افزودن تخفیف</h6>
                @if (ViewBag.Alert != null)
                {
                    <div class="alert alert-fill-danger" role="alert">
                        @ViewBag.Alert
                    </div>
                }
                <form asp-controller="Discount" asp-action="Create">
                    <div class="row">
                        <div class="form-group col-4">
                            <label for="exampleInputUsername1">عنوان تخفیف</label>
                            <input type="text" asp-for="DiscountTitle" class="form-control" autocomplete="off" placeholder="عنوان تخفیف">
                            <span class="text-danger" asp-validation-for="DiscountTitle"></span>
                        </div>
                        <div class="form-group col-4">
                            <label for="exampleInputUsername1">کد تخفیف</label>
                            <input type="text" asp-for="DiscountCode" class="form-control" autocomplete="off" placeholder="کد تخفیف">
                            <span class="text-danger" asp-validation-for="DiscountCode"></span>
                        </div>  <div class="form-group col-4">
                            <label for="exampleInputUsername1">قیمت تخفیف</label>
                            <input type="text" asp-for="DiscountPrice" class="form-control" autocomplete="off" placeholder="قیمت تخفیف">
                            <span class="text-danger" asp-validation-for="DiscountPrice"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-6">
                            <label>تاریخ شروع</label>
                            <input type="text" asp-for="StartTime" class="form-control" DatePicker="1" style="z-index: 1">
                            <span class="text-danger" asp-validation-for="StartTime"></span>
                        </div>
                        <div class="form-group col-6">
                            <label>تاریخ پایان</label>
                            <input type="text" asp-for="EndTime" class="form-control" DatePicker="1" style="z-index: 1">
                            <span class="text-danger" asp-validation-for="EndTime"></span>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary ml-2">ثبت</button>
                    <a role="button" href="/Admin/Discounts" class="btn btn-light">لغو</a>
                </form>
            </div>
        </div>
    </div>
</div>
@section Footer{
    <partial name="_ValidationScriptsPartial" />
}
