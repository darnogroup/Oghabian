@model InsertLinkViewModel
@{
    ViewData["Title"] = "افزودن لینک";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<nav class="page-breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/Admin">پیشخوان</a></li>
        <li class="breadcrumb-item"><a asp-controller="Link" asp-action="Index">لیست لینک ها</a></li>
        <li class="breadcrumb-item " aria-current="page">افزودن لینک</li>
    </ol>
</nav>
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h6 class="card-title">افزودن لینک</h6>
                @if (ViewBag.Alert != null)
                {
                    <div class="alert alert-fill-danger" role="alert">
                        @ViewBag.Alert
                    </div>
                }
                <form asp-controller="Link" asp-action="Create">
                    <div class="form-group">
                        <label for="exampleInputUsername1">عنوان لینک</label>
                        <input type="text" asp-for="LinkTitle" class="form-control" autocomplete="off" placeholder="عنوان لینک">
                        <span class="text-danger" asp-validation-for="LinkTitle"></span>
                    </div>  
                    <div class="form-group">
                        <label for="exampleInputUsername1">لینک</label>
                        <input type="text" asp-for="Link" class="form-control"  autocomplete="off" placeholder="لینک">
                        <span class="text-danger" asp-validation-for="Link"></span>
                    </div>
                    <button type="submit" class="btn btn-primary ml-2">ثبت</button>
                    <a role="button" href="/Admin/links" class="btn btn-light">لغو</a>
                </form>
            </div>
        </div>
    </div>
</div>
@section Footer{
    <partial name="_ValidationScriptsPartial" />
}
