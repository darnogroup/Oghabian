@model InsertArticleViewModel
@{
    ViewData["Title"] = "افزودن مقاله";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<nav class="page-breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/Admin">پیشخوان</a></li>
        <li class="breadcrumb-item " aria-current="page"><a asp-controller="Article" asp-action="Index">لیست  مقاله</a></li>
        <li class="breadcrumb-item active" aria-current="page">افزودن مقاله</li>
    </ol>
</nav>
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h6 class="card-title">افزودن مقاله</h6>
                @if (ViewBag.Alert != null)
                {
                    <div class="alert alert-fill-danger" role="alert">
                        @ViewBag.Alert
                    </div>
                }
                <form asp-controller="Article" asp-action="Create" enctype="multipart/form-data">

                    <img src="/Images/notFound.png" id="image" class="mb-3 " width="150" height="90" /><br />
                    <div class="row">


                        <div class="form-group  col-12">
                            <label>عنوان مقاله </label>
                            <input type="text" asp-for="ArticleTitle" class="form-control" autocomplete="off" placeholder="عنوان مقاله">
                            <span class="text-danger" asp-validation-for="ArticleTitle"></span>
                        </div>

                        <div class="form-group col-12">
                            <label>برچسب مقاله </label>
                            <input type="text" asp-for="ArticleTags" class="form-control" autocomplete="off" placeholder="برچسب مقاله">
                            <span class="text-danger" asp-validation-for="ArticleTags"></span>
                        </div>
                        <div class="form-group  col-12">
                            <label>متن مقاله</label>
                            <textarea id="maxlength-textarea" asp-for="ArticleBody" class="form-control ckeditor"  rows="15" style="height: 150px !important;"  placeholder="متن مقاله"></textarea>
                            <span class="text-danger" asp-validation-for="ArticleBody"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-6">
                            <label>انتخاب دسته بندی</label>
                            <select class="form-control" asp-items="@ViewBag.Categories" asp-for="CategoryId">
                                <option selected="" disabled="">یک  گزینه را انتخاب کنید</option>
                            </select>   <span class="text-danger" asp-validation-for="CategoryId"></span>
                        </div>
                        <div class="form-group col-6">
                            <label>مدت زمان مطالعه</label>
                            <input type="text" asp-for="TimeStudy" class="form-control" autocomplete="off" placeholder="15دقیقه">
                            <span class="text-danger" asp-validation-for="TimeStudy"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-3">
                            <label>آپلود تصویر</label>
                            <input type="file" id="imagePath" onchange="ChangeImage(this)" asp-for="ArticleImage" class="form-control" />
                            <span class="text-danger" asp-validation-for="ArticleImage"></span>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary ml-2">ثبت</button>
                    <a role="button" href="/Admin/Articles" class="btn btn-light">لغو</a>
                </form>
            </div>
        </div>
    </div>
</div>
@section Footer{
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdn.ckeditor.com/4.18.0/full/ckeditor.js"></script>
}