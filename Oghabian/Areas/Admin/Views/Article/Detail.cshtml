@model CommentArticleDetailViewModel
@{
    ViewData["Title"] = "جزئیات";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<nav class="page-breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/Admin">پیشخوان</a></li>
        <li class="breadcrumb-item"><a asp-controller="Article" asp-action="Index">لیست مقالات</a></li>
        <li class="breadcrumb-item"><a asp-controller="Article" asp-action="Comments" asp-route-id="@Model.Id">لیست دیدگاه ها</a></li>
        <li class="breadcrumb-item " aria-current="page">جزئیات دیدگاه  </li>
    </ol>
</nav>
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h6 class="card-title">جزئیات دیدگاه</h6>
                @if (ViewBag.Alert != null)
                {
                    <div class="alert alert-fill-danger" role="alert">
                        @ViewBag.Alert
                    </div>
                }
                <form asp-controller="Article" asp-action="Detail" >

                    <img src="/Images/@Model.Avatar" id="image" class="mb-3 " width="150" height="90" /><br />
                    <div class="row">
                        <input type="hidden" asp-for="ParentId"/>

                        <div class="form-group  col-12">
                            <label>نویسنده دیدگاه</label>
                            <input type="text" asp-for="Name" disabled="disabled" class="form-control" >
                        </div>
                         <div class="form-group  col-12">
                            <label>تاریخ ثبت دیدگاه</label>
                            <input type="text" asp-for="Time" disabled="disabled" class="form-control" >
                        </div>

                    
                        <div class="form-group  col-12">
                            <label>متن دیدگاه</label>
                            <textarea id="maxlength-textarea" disabled="disabled" asp-for="Body" class="form-control " rows="15"></textarea>
                        </div>
                    </div>
                    
                   <input type="hidden" asp-for="Id"/>
                    <div class="form-check form-check-flat form-check-primary col-4">
                        <label class="form-check-label">
                            <input type="checkbox" asp-for="Show"  class="form-check-input">
                          انتشار دیدگاه
                            <i class="input-frame"></i></label>
                    </div>

                    <button type="submit" class="btn btn-primary ml-2">ثبت</button>
                    <a role="button" asp-controller="Article" asp-action="Comments" asp-route-id="@Model.Id" class="btn btn-light">لغو</a>
                </form>
            </div>
        </div>
    </div>
</div>
@section Footer{
    <partial name="_ValidationScriptsPartial" />

}