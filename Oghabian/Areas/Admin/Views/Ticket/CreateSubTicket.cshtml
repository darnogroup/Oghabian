@model InsertTicketDetailViewModel
@{
    ViewData["Title"] = "افزودن پاسخ";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<nav class="page-breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/Admin">پیشخوان</a></li>
        <li class="breadcrumb-item " aria-current="page"><a asp-controller="Ticket" asp-action="Index">لیست تکیت ها</a></li>
        <li class="breadcrumb-item " aria-current="page"><a asp-controller="Ticket" asp-action="Show" asp-route-id="@ViewBag.Id">لیست پیام ها</a></li>
        <li class="breadcrumb-item active" aria-current="page">افزودن پاسخ جدید</li>
    </ol>
</nav>

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h6 class="card-title">ثبت پاسخ جدید</h6>
                @if (ViewBag.Alert != null)
                {
                    <div class="alert alert-fill-danger" role="alert">
                        @ViewBag.Alert
                    </div>
                }
                <form asp-controller="Ticket" asp-action="CreateSubTicket"method="post" autocomplete="off" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="exampleInputUsername1">متن پیام</label>
                        <textarea id="maxlength-textarea" asp-for="Text" class="form-control" maxlength="400" rows="8" placeholder="متن پیام"></textarea>
                        <span class="text-danger" asp-validation-for="Text"></span>
                    </div>     <input type="hidden" asp-for="Id" value="@ViewBag.Id" />
                    <input type="hidden" asp-for="UserId" value="@ViewBag.User" />
                    
                    <div class="form-group col-4">
                        <label>آپلود فایل</label>
                        <input type="file"  asp-for="DocumentFile" class="form-control" />
                   
                    </div>
                    <button type="submit" class="btn btn-primary ml-2">ثبت</button>
                    <a role="button" asp-controller="Ticket" asp-action="Show" asp-route-id="@ViewBag.Id" class="btn btn-light">لغو</a>
                </form>
            </div>
        </div>
    </div>
</div>
@section Footer{
    <partial name="_ValidationScriptsPartial" />
}