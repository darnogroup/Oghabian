@model InsertPropertyViewModel
@{
    ViewData["Title"] = "افزودن ویژگی";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<nav class="page-breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/Admin">پیشخوان</a></li>
        <li class="breadcrumb-item " aria-current="page"><a asp-controller="Food" asp-action="Index">لیست  پک های غذایی</a></li>
        <li class="breadcrumb-item " aria-current="page"><a asp-controller="Food" asp-action="Property" asp-route-id="@ViewBag.Food">ویژگی های  پک  غذایی</a></li>
        <li class="breadcrumb-item active" aria-current="page">افزودن ویژگی  پک غذایی</li>
    </ol>
</nav>

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h6 class="card-title">افزودن ویژگی </h6>
                @if (ViewBag.Alert != null)
                {
                    <div class="alert alert-fill-danger" role="alert">
                        @ViewBag.Alert
                    </div>
                }
                <form asp-controller="Food" asp-action="CreateProperty">
                    <div class="row">
                        <div class="form-group col-6">
                            <label for="exampleInputUsername1">عنوان ویژگی</label>
                            <input type="text" asp-for="PropertyTitle" class="form-control"  autocomplete="off" placeholder="عنوان ویژگی">
                            <span class="text-danger" asp-validation-for="PropertyTitle"></span>
                        </div>
                        <input type="hidden" asp-for="FoodId" value="@ViewBag.Food"/>
                        <div class="form-group col-6">
                            <label for="exampleInputUsername1">مقدار ویژگی</label>
                            <input type="text" asp-for="PropertyValue" class="form-control" autocomplete="off" placeholder="مفدار ویژگی">
                            <span class="text-danger" asp-validation-for="PropertyValue"></span>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary ml-2">ثبت</button>
                    <a role="button" asp-controller="Food" asp-action="Property" asp-route-id="@ViewBag.Food" class="btn btn-light">لغو</a>
                </form>
            </div>
        </div>
    </div>
</div>
@section Footer{
    <partial name="_ValidationScriptsPartial" />
}