@model InsertSliderViewModel
@{
    ViewData["Title"] = "افزودن تصویر";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}



<nav class="page-breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/Admin">پیشخوان</a></li>
        <li class="breadcrumb-item"><a asp-controller="Slider" asp-action="Index">اسلایدر</a></li>
        <li class="breadcrumb-item " aria-current="page">افزودن  تصویر</li>
    </ol>
</nav>
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h6 class="card-title">افزودن تصویر</h6>
                @if (ViewBag.Alert != null)
                {
                    <div class="alert alert-fill-danger" role="alert">
                        @ViewBag.Alert
                    </div>
                }
                <form asp-controller="Slider" asp-action="Create" enctype="multipart/form-data">
                    <div class="form-group col-4">
                        <img class="img-fluid" src="~/Images/notFound.png" id="image" height="80" width="100"><br />
                        <label class="mt-3">برای بارگزاری روی دکمه زیر کلیک کنید</label><br />
                        <div class="upload-btn-rz">

                            <input type="file" id="imagePath" onchange="ChangeImage(this);" asp-for="SliderImageFile" />
                        </div><br />
                        <span class="text-danger" asp-validation-for="SliderImageFile"></span>
                    </div>

                    <div class="form-group">
                        <label for="exampleInputUsername1">متن جایگزین</label>
                        <input type="text" asp-for="SliderAlt" class="form-control" id="exampleInputUsername1" autocomplete="off" placeholder="متن جایگزین">
                        <span class="text-danger" asp-validation-for="SliderAlt"></span>
                    </div>
                    <button type="submit" class="btn btn-primary ml-2">ثبت</button>
                    <a role="button" href="/Admin/Sliders" class="btn btn-light">لغو</a>
                </form>
            </div>
        </div>
    </div>
</div>
@section Footer{
    <partial name="_ValidationScriptsPartial" />
}