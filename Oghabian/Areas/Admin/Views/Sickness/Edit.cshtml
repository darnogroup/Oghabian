@model UpdateSicknessViewModel
@{
    ViewData["Title"] = "ویرایش بیماری";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<nav class="page-breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/Admin">پیشخوان</a></li>
        <li class="breadcrumb-item"><a asp-controller="Sickness" asp-action="Index">لیست بیماری ها</a></li>
        <li class="breadcrumb-item " aria-current="page">ویرایش  بیماری</li>
    </ol>
</nav>
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h6 class="card-title">ویرایش بیماری</h6>
                @if (ViewBag.Alert != null)
                {
                    <div class="alert alert-fill-danger" role="alert">
                        @ViewBag.Alert
                    </div>
                }
                <form asp-controller="Sickness" asp-action="Edit" enctype="multipart/form-data">
                    <div class="form-group col-4">
                        <img class="img-fluid" src="~/Images/@Model.SicknessPath" id="image" height="80" width="100"><br />
                        <label class="mt-3">برای بارگزاری روی دکمه زیر کلیک کنید</label><br />
                        <div class="upload-btn-rz">
                         
                            <input type="file" id="imagePath" onchange="ChangeImage(this);" asp-for="SicknessFile" />
                        </div><br />
                        <span class="text-danger" asp-validation-for="SicknessFile"></span>
                    </div>
                    <input type="hidden" asp-for="SicknessPath"/>
                    <input type="hidden" asp-for="SicknessId"/>
                    <div class="form-group">
                        <label for="exampleInputUsername1">نام بیماری</label>
                        <input type="text" asp-for="SicknessTitle" class="form-control" id="exampleInputUsername1" autocomplete="off" placeholder="نام بیماری ">
                        <span class="text-danger" asp-validation-for="SicknessTitle"></span>
                    </div>
                    <button type="submit" class="btn btn-primary ml-2">ثبت</button>
                    <a role="button" href="/Admin/Sickness" class="btn btn-light">لغو</a>
                </form>
            </div>
        </div>
    </div>
</div>
@section Footer{
    <partial name="_ValidationScriptsPartial" />
}