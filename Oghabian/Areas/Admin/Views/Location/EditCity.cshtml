@model UpdateCityViewModel
@{
    ViewData["Title"] = "ویرایش شهر";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<nav class="page-breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/Admin">پیشخوان</a></li>
        <li class="breadcrumb-item"><a asp-controller="Location" asp-action="Index">لیست  استان ها</a></li>
        <li class="breadcrumb-item"><a asp-controller="Location" asp-action="Cities" asp-route-state="@Model.StateId">لیست  شهر ها</a></li>
        <li class="breadcrumb-item " aria-current="page">افزودن  شهر</li>
    </ol>
</nav>
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h6 class="card-title">ویرایش شهر</h6>
                @if (ViewBag.Alert != null)
                {
                    <div class="alert alert-fill-danger" role="alert">
                        @ViewBag.Alert
                    </div>
                }
                <form asp-controller="Location" asp-action="EditCity">
                    <div class="form-group">
                        <label for="exampleInputUsername1">نام شهر</label>
                        <input type="text" asp-for="CityName" class="form-control" id="exampleInputUsername1" autocomplete="off" placeholder="نام شهر">
                        <span class="text-danger" asp-validation-for="CityName"></span>
                    </div><input type="hidden" asp-for="StateId" />
                    <input type="hidden" asp-for="CityId" />
                    <button type="submit" class="btn btn-primary ml-2">ثبت</button>
                    <a role="button" asp-controller="Location" asp-action="Cities" asp-route-state="@Model.StateId" class="btn btn-light">لغو</a>
                </form>
            </div>
        </div>
    </div>
</div>
@section Footer{
    <partial name="_ValidationScriptsPartial" />
}