@model UpdateCategoryViewModel
@{
    ViewData["Title"] = "ویرایش دسته بندی";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<nav class="page-breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/Admin">پیشخوان</a></li>
        <li class="breadcrumb-item"><a asp-controller="Category" asp-action="Index">لیست دسته بندی ها</a></li>
        <li class="breadcrumb-item " aria-current="page">ویرایش دسته  بندی</li>
    </ol>
</nav>
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h6 class="card-title">ویرایش دسته بندی</h6>
                @if (ViewBag.Alert != null)
                {
                    <div class="alert alert-fill-danger" role="alert">
                        @ViewBag.Alert
                    </div>
                }
                <form asp-controller="Category" asp-action="Edit">
                    <div class="form-group">
                        <label for="exampleInputUsername1">نام دسته بندی</label>
                        <input type="text" asp-for="CategoryTitle" class="form-control" id="exampleInputUsername1" autocomplete="off" placeholder="نام دسته بندی">
                        <span class="text-danger" asp-validation-for="CategoryTitle"></span>
                    </div><input type="hidden" asp-for="CategoryId"/>
                    <button type="submit" class="btn btn-primary ml-2">ثبت</button>
                    <a role="button" href="/Admin/Categories" class="btn btn-light">لغو</a>
                </form>
            </div>
        </div>
    </div>
</div>
@section Footer{
    <partial name="_ValidationScriptsPartial"/>
}
