@model UserQuestionDetailViewModel
@{
    ViewData["Title"] = "جزئیات پرسش";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<nav class="page-breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/Admin">پیشخوان</a></li>
        <li class="breadcrumb-item"><a asp-controller="UserQuestion" asp-action="Index">لیست پرسش ها</a></li>
        <li class="breadcrumb-item " aria-current="page">جزئیات پرسش</li>
    </ol>
</nav>
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h6 class="card-title">جزئیات پرسش</h6>
                @if (ViewBag.Alert != null)
                {
                    <div class="alert alert-fill-danger" role="alert">
                        @ViewBag.Alert
                    </div>
                }
                <form asp-controller="UserQuestion" asp-action="Detail">
                    <img src="/Images/@Model.Avatar " id="image" class="mb-3 " width="150" height="90" /><br />
                    <h5>این سوال توسط:<span class="text-primary">@Model.FullName</span> پرسیده شده</h5>
                    <div class="form-group">
                        <label class="mt-3">عنوان سوال</label>
                        <input type="text" asp-for="Title" class="form-control" disabled="disabled" autocomplete="off" placeholder="عنوان سوال">
                        <span class="text-danger" asp-validation-for="Title"></span>
                    </div> <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label for="exampleInputUsername1">متن سوال</label>
                        <textarea id="maxlength-textarea" asp-for="Body" class="form-control" disabled="disabled" maxlength="900" rows="8" placeholder="پاسخ سوال"></textarea>
                        <span class="text-danger" asp-validation-for="Body"></span>
                    </div>
                    <div class="form-check form-check-flat form-check-primary col-4">
                        <label class="form-check-label">
                            <input type="checkbox" asp-for="Active"  class="form-check-input">
                           انتشار آگهی
                            <i class="input-frame"></i></label>
                    </div>
                    <button type="submit" class="btn btn-primary ml-2">ثبت</button>
                    <a role="button" href="/Admin/UserQuestions" class="btn btn-light">لغو</a>
                </form>
            </div>
        </div>
    </div>
</div>
@section Footer{
    <partial name="_ValidationScriptsPartial" />
}