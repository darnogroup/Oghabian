@model InsertAnswerViewModel
@{
    ViewData["Title"] = "ثبت پاسخ جدید";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<nav class="page-breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/Admin">پیشخوان</a></li>
        <li class="breadcrumb-item"><a asp-controller="UserQuestion" asp-action="Index">لیست پرسش ها</a></li>
        <li class="breadcrumb-item " aria-current="page">افزودن پاسخ سوال</li>
    </ol>
</nav>
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <di class="card-body">
                <h6 class="card-title">افزودن پاسخ سوال</h6>
                @if (ViewBag.Alert != null)
                {
                    <div class="alert alert-fill-danger" role="alert">
                        @ViewBag.Alert
                    </div>
                }
                <form asp-controller="UserQuestion" asp-action="InsertAnswer">
                 
                    <div class="form-group">
                        <label>پاسخ</label>
                        <textarea id="maxlength-textarea" asp-for="AnswerText" class="form-control" maxlength="900" rows="8" placeholder="پاسخ "></textarea>
                        <span class="text-danger" asp-validation-for="AnswerText"></span>
                    </div><input type="hidden" asp-for="UserId"/>
                    <input type="hidden" asp-for="QuestionId"/>
                    <button type="submit" class="btn btn-primary ml-2">ثبت</button>
                    <a role="button" href="/Admin/UserQuestions" class="btn btn-light">لغو</a>
                </form>
            </div>
        </div>
    </div>
</div>
@section Footer{
    <partial name="_ValidationScriptsPartial" />
}