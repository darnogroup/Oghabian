@model List<RoleViewModel>
@{
    ViewData["Title"] = "لیست نقش ها";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<nav class="page-breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/Admin">پیشخوان</a></li>
        <li class="breadcrumb-item " aria-current="page">لیست نقش ها</li>
    </ol>
</nav>
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h6 class="card-title">لیست نقش ها</h6>
                <div>
                    <div id="dataTableExample_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
                        <div class="row">
                            <div class="col-sm-12 col-md-4">
                                <div class="dataTables_length" id="dataTableExample_length">
                                    <label><a role="button" asp-controller="Role" asp-action="Create" class="btn btn-outline-success">افزودن نقش</a></label>
                                </div>
                            </div>

                        </div><div class="row">
                            <div class="col-sm-12">
                                <table id="dataTableExample" class="table dataTable no-footer" role="grid" aria-describedby="dataTableExample_info">
                                    <thead>
                                        <tr role="row">
                                            <th>نام نقش</th>

                                            <th>عملیات</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        @foreach (var item in Model)
                                        {
                                            <tr role="row" id="item_@item.Id">

                                                <td>@item.Name</td>

                                                <td>
                                                    <a role="button" asp-controller="Role" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning">ویرایش</a>
                                                    <button onclick="DeleteRole('@item.Id')" class="btn btn-outline-danger">پاک کردن</button>
                                                </td>

                                            </tr>
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

