@model InsertRoleViewModel
@{
    ViewData["Title"] = "افزودن نقش";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<nav class="page-breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/Admin">پیشخوان</a></li>
        <li class="breadcrumb-item " aria-current="page"><a asp-controller="Role" asp-action="Index">لیست نقش ها</a></li>
        <li class="breadcrumb-item active" aria-current="page">افزودن نقش</li>
    </ol>
</nav>

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h6 class="card-title">فرم ثبت نقش</h6>
                @if (ViewBag.Alert != null)
                {
                    <div class="alert alert-fill-danger" role="alert">
                        @ViewBag.Alert
                    </div>
                }
                <form asp-controller="Role" asp-action="Create">
                    <div class="form-group">
                        <label for="exampleInputUsername1">نام نقش</label>
                        <input type="text" asp-for="Name" class="form-control" id="exampleInputUsername1" autocomplete="off" placeholder="نام نقش">
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                    <button type="submit" class="btn btn-primary ml-2">ثبت</button>
                    <a role="button" href="/Admin/roles" class="btn btn-light">لغو</a>
                </form>
            </div>
        </div>
    </div>
</div>
@section Footer{
    <partial name="_ValidationScriptsPartial" />
}

