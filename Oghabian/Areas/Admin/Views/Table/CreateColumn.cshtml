@model InsertColumnViewModel
@{
    ViewData["Title"] = "افزودن سطر";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<nav class="page-breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/Admin">پیشخوان</a></li>
        <li class="breadcrumb-item"><a asp-controller="Table" asp-action="Index">لیست جداول</a></li>
        <li class="breadcrumb-item"><a asp-controller="Table" asp-action="Column" asp-route-id="@Model.RowId">لیست سطرها</a></li>
        <li class="breadcrumb-item " aria-current="page">افزودن سطر</li>
    </ol>
</nav>
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h6 class="card-title">افزودن سطر</h6>
                @if (ViewBag.Alert != null)
                {
                    <div class="alert alert-fill-danger" role="alert">
                        @ViewBag.Alert
                    </div>
                }
            <form asp-controller="Table" asp-action="CreateColumn">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            @foreach (var item in Model.Rows)
                            {

                                <th scope="col">@item</th>
                            }
                        </tr>
                    </thead>
                    <tbody>

                        <tr>
                            @for (var i = 0; i < Model.Count; i++)
                            {
                                <td>
                                    <input type="text" class="border-2" name="Columns" />
                                </td>
                            }
                        </tr>
                    </tbody>
                </table>  <input type="hidden" asp-for="RowId" />
                <input type="hidden" asp-for="Count" />
                <button type="submit" class="btn btn-primary ml-2 mt-2">ثبت</button>
                <a role="button" asp-controller="Table" asp-action="Column" asp-route-id="@Model.RowId" class="btn btn-light mt-2">لغو</a>
            </form>
            </div>
        </div>
    </div>
</div>
@section Footer{
    <partial name="_ValidationScriptsPartial"/>
}
