@model InsertTableViewModel
@{
    ViewData["Title"] = "ساخت جدول";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<nav class="page-breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/Admin">پیشخوان</a></li>
        <li class="breadcrumb-item"><a asp-controller="Table" asp-action="Index">لیست جداول</a></li>
        <li class="breadcrumb-item " aria-current="page">افزودن جدول</li>
    </ol>
</nav>
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h6 class="card-title">افزودن جدول</h6>
                @if (ViewBag.Alert != null)
                {
                    <div class="alert alert-fill-danger" role="alert">
                        @ViewBag.Alert
                    </div>
                }
            <form asp-controller="Table" asp-action="Create">
                <div class="form-group">
                    <label for="exampleInputUsername1">عنوان جدول</label>
                    <input type="text" asp-for="Name" class="form-control" id="exampleInputUsername1" autocomplete="off" placeholder="عنوان جدول">
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputUsername1">درباره جدول</label>
                    <textarea id="maxlength-textarea" asp-for="Description" class="form-control" maxlength="900" rows="8" placeholder="درباره جدول"></textarea>
                    <span class="text-danger" asp-validation-for="Description"></span>
                </div>
                <div class="form-group">
                    <label>ستون های جدول<a id="btn" class="text-white btn btn-sm btn-warning">افزودن ستون</a></label>
                    <div id="list">
                        <input type="text" name="Rows" class="form-control col-6"  placeholder="عنوان ستون">
                    </div>
                </div>  
                <span class="text-danger" asp-validation-for="Rows"></span>
                <button type="submit" class="btn btn-primary ml-2">ثبت</button>
                <a role="button" href="/Admin/Tables" class="btn btn-light">لغو</a>
            </form>
            </div>
        </div>
    </div>
</div>
@section Footer{
    <partial name="_ValidationScriptsPartial" />
    <script>
        $("#btn").click(function () {
            $("#list").append("<input type='text' name='Rows' class='form - control col-6 mt-2'  placeholder='عنوان ستون'><br/>");
        });
    </script>
}