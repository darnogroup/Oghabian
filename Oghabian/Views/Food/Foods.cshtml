@model Tuple<List<FoodCartViewModel>,int,int>
@{
    ViewData["Title"] = "پکیج های غذایی";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="inner-section shop-part mt-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 order-1 order-lg-0">
                <form href="/foods">
                    <div class="shop-widget">
                        <h6 class="shop-widget-title mb-2">جستجوی پیشرفته</h6>
                        <div class="form-group p-1 col-xl-12 col-lg-2 col-md-6 col-sm-12">
                            <input type="text" class="form-control" name="carbohydrate" placeholder="کربوهیدرات">
                        </div>
                        <div class="form-group p-1 col-xl-12 col-lg-2 col-md-6 col-sm-12">
                            <input type="text" class="form-control" name="fat" placeholder="چربی">
                        </div>
                        <div class="form-group p-1 col-xl-12 col-lg-2 col-md-6 col-sm-12">
                            <input type="text" class="form-control" name="calories" placeholder="کالری">
                        </div>
                        <div class="form-group p-1 col-xl-12 col-lg-2 col-md-6 col-sm-12">
                            <input type="text" class="form-control" name="protein" placeholder="پروتیئن">
                        </div>
                        <div class="form-button">
                            <button type="submit">فیلتر</button>

                        </div>  
                        <div class="form-button">
                            <a class="btn btn-sm mt-2 w-100 btn-primary text-white" href="/foods">تازه سازی</a>

                        </div>
                    </div>
                </form>
                @await Component.InvokeAsync("SicknessComponent")
                @await Component.InvokeAsync("MealComponent")
              
            </div>
            <div class="col-lg-9 order-0 order-lg-1">
                <div class="row">

                </div>
                <div class="row row-cols-2 row-cols-md-3 row-cols-lg-3 row-cols-xl-3">

                    @foreach (var item in Model.Item1)
                    {
                        <div class="col">
                            <div class="product-card">
                                <div class="product-media">
                                    <div class="product-label"><label class="label-text new">@item.Category</label></div>
                                                       
                                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                                    {
                                
                                        <button class="product-wish wish" onclick="AddFavorite('@item.FoodId')">
                                            <i class="far fa-heart"></i>
                                        </button>
                                    }
                                    else
                                    {
                                        <button class="product-wish wish" onclick="LoginError()">
                                            <i class="far fa-heart"></i>
                                        </button>
                                    }
                                    
                                    
                                    
                                    <a class="product-image" asp-controller="Food" asp-action="FoodDetail" asp-route-id="@item.FoodId">
                                        <img src="~/Images/@item.FoodImage" alt="@item.FoodTitle">
                                    </a>
                                   
                                </div>
                                <div class="product-content">
                                    <h6 class="product-name"><a asp-controller="Food" asp-action="FoodDetail" asp-route-id="@item.FoodId">@item.FoodTitle</a></h6>
                                    <div class="product-rating">
                                    @switch (item.Rate)
                                                {
                                                    case 1:
                                                        <i class="active fas fa-star"></i>
                                                        <i class="far fa-star"></i>
                                                        <i class="far fa-star"></i>
                                                        <i class="far fa-star"></i>
                                                        <i class="far fa-star"></i>
                                                        break; 
                                                    case 2:
                                                        <i class="active fas fa-star"></i>
                                                        <i class="active fas fa-star"></i>
                                                        <i class="far fa-star"></i>
                                                        <i class="far fa-star"></i>
                                                        <i class="far fa-star"></i>
                                                        break; 
                                                    case 3:
                                                        <i class="active fas fa-star"></i>
                                                        <i class="active fas fa-star"></i>
                                                        <i class="active fas fa-star"></i>
                                                        <i class="far fa-star"></i>
                                                        <i class="far fa-star"></i>
                                                        break;
                                                    case 4:
                                                        <i class="active fas fa-star"></i>
                                                        <i class="active fas fa-star"></i>
                                                        <i class="active fas fa-star"></i>
                                                        <i class="active fas fa-star"></i>
                                                        <i class="far fa-star"></i>
                                                        break;
                                                    case 5:
                                                        <i class="active fas fa-star"></i>
                                                        <i class="active fas fa-star"></i>
                                                        <i class="active fas fa-star"></i>
                                                        <i class="active fas fa-star"></i>
                                                        <i class="active fas fa-star"></i>
                                                      
                                                        break;
                                                }
                                        <a >@item.Rate</a>
                                    </div>
                                    <div class="product-price">
                                        <div>
                                            @if (item.FoodDiscountPrice != 0)
                                            {
                                                <del>@item.FoodPrice تومان</del><span>@item.FoodDiscountPrice تومان  </span>
                                            }
                                            else
                                            {
                                                <span> @item.FoodPrice تومان </span>
                                            }

                                        </div>
                                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                                        {<a class="product-add" onclick="AddToCart('@item.FoodId')" title="افزودن به سبد خرید"><i class="far fa-shopping-cart"></i></a>

                                        }
                                        else
                                        {
                                            <a class="product-add" onclick="LoginError()" title="افزودن به سبد خرید" ><i class="far fa-shopping-cart"></i></a>
                                
                                        }

                                    </div>
                                </div>
                            </div>
                        </div>
                    }


                </div>
                <div class="row">
                    <div class="col-lg-12">
                        
                        @if (Model.Item2 > 1)
                                        {
                            <ul class="pagination">
                                <li class="page-item @((Model.Item3-1 == 0) ? "disabled" :"")">
                                    <a class="page-link" href="/Foods?calories=@ViewBag.calories&carbohydrate=@ViewBag.carbohydrate&fat=@ViewBag.fat&protein=@ViewBag.protein&meal=@ViewBag.meal&sickness=@ViewBag.sickness&page=@(Model.Item3-1)"><i class="far fa-long-arrow-right"></i></a>
                                </li>
                                @for (int i = 1; i <= (Model.Item2); i++)
                                {
                                    <li class="page-item "><a class="page-link @(Model.Item3 == i ? "active" : "")" href="/Foods?calories=@ViewBag.calories&carbohydrate=@ViewBag.carbohydrate&fat=@ViewBag.fat&protein=@ViewBag.protein&meal=@ViewBag.meal&sickness=@ViewBag.sickness&page=@i">@i</a></li>
                                }
                                <li class="page-item @((Model.Item3 + 1 > Model.Item2) ? "disabled" : "")">
                                    <a class="page-link" href="/Foods?calories=@ViewBag.calories&carbohydrate=@ViewBag.carbohydrate&fat=@ViewBag.fat&protein=@ViewBag.protein&meal=@ViewBag.meal&sickness=@ViewBag.sickness&page=@(Model.Item3+1)"><i class="far fa-long-arrow-left"></i></a>
                                </li>
                            </ul>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

